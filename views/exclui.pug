include ./layout/header.pug
include ./layout/style.pug
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous") 

section.gradient-custom.pt-1.pb-5
    .container.py-3
        div.row.d-flex.justify-content-center.align-items-center.h-100.w-100
            div.col-12.col-md-8.col-lg-6.col-xl-5
                div.card.bg-dark.text-white(style="border-radius: 1rem;")
                    div.card-body.p-3.text-center
                        div.mt-md-4
                            h2.fw-bold.mb-2.text-uppercase Editar dados da Foto
                            p.text-white-50.mb-5 

                            form(action="/excluir?id="+dadosFoto[0]['id'], method="post", enctype="multipart/form-data") 
                                .row
                                        .col-sm-12.mt-3
                                            .card.border-0.img-fluid.img-responsive(style="width:100%;height:25rem")
                                                img.card-img-top(src='../img/' + dadosFoto[0]['imagem'] style="width: 100%; height: 20vw;object-fit: cover;")
                                                .card-body
                                                    h5.card-title= dadosFoto[0]['nome'] 
                                                    p.card-text= dadosFoto[0]['descricao']
                                                    footer.blockquote-footer.mt-2(style="font-size: 70%") Postado por:    
                                                        = dadosFoto[0]['autor']

                                a(href="/")
                                    div.btn.btn-outline-success.btn-lg.px-5.mt-5.m-3 √çnicio

                                button.btn.btn-outline-danger.btn-lg.px-5.mt-5.m-3(type="submit") Excluir