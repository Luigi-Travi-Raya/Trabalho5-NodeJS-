include ./layout/style.pug
section.gradient-custom.pt-1.pb-5
    .container.py-3
        div.row.d-flex.justify-content-center.align-items-center.h-100.w-100
            div.col-12.col-md-8.col-lg-6.col-xl-5
                div.card.bg-dark.text-white(style="border-radius: 1rem;")
                    div.card-body.p-3.text-center
                        div.mt-md-4
                            h2.fw-bold.mb-2.text-uppercase Registro
                            p.text-white-50.mb-5 

                            - if(erroRegistro)
                                .alert.alert-danger.p-0.mb-1
                                    p Email já cadastrado

                            form(action="/registrar", method="post") 
                                div.form-floating.mt-5.mb-3
                                    input.form-control(type="text", name="nome", placeholder="Nome", required)
                                    label(for="nome" style="color: black;") Nome
                                
                                div.form-floating.mt-5.mb-3
                                    input.form-control(type="email", name="email", placeholder="Email", required)
                                    label(for="email" style="color: black;") Email
                                   

                                div.form-floating.mt-5.mb-3
                                    input.form-control(type="password", name="senha", placeholder="Senha", required)
                                    label(for="senha" style="color: black;") Senha
                                    

                                p.mb-0 Já possui conta? Se logue 
                                    a.text-white-50.fw-bold(href="login") aqui

                                a(href="/")
                                    div.btn.btn-outline-danger.btn-lg.px-5.mt-5.m-3 Ínicio

                                button.btn.btn-outline-success.btn-lg.px-5.mt-5.m-3(type="submit") Registrar