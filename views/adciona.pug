include ./layout/header.pug
include ./layout/style.pug
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous") 

section.gradient-custom.pt-1.pb-5
    .container.py-3
        div.row.d-flex.justify-content-center.align-items-center.h-100.w-100
            div.col-12.col-md-8.col-lg-6.col-xl-5
                div.card.bg-dark.text-white(style="border-radius: 1rem;")
                    div.card-body.p-3.text-center
                        div.mt-md-4
                            h2.fw-bold.mb-2.text-uppercase Upload de Foto
                            p.text-white-50.mb-5 

                            - if(erroRegistro)
                                .alert.alert-danger.p-0.mb-1
                                    p Email já cadastrado

                            form(action="/adcionar", method="post") 
                                div.form-floating.mt-5.mb-3
                                    label.form(for="nomeImg" style="color: black;") Nome da Imagem
                                    input.form-control(type="text", name="nomeImg", required)
                                
                                div.form-outline.form-white.mt-5.mb-2

                                    label.form-label(for="desc") Descrição da Foto
                                    input.form-control.form-control-lg(type="textarea", name="desc", required)

                                div.form-outline.form-white.mt-5.mb-2
                                    label.form-label(for="foto") Foto
                                    input.form-control.form-control-lg(type="file", name="foto", required)

                                a(href="/")
                                    div.btn.btn-outline-danger.btn-lg.px-5.mt-5.m-3 Ínicio

                                button.btn.btn-outline-success.btn-lg.px-5.mt-5.m-3(type="submit") Registrar